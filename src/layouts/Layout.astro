---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { GlobalSystemStatus } from "@/components/system/GlobalSystemStatus";
import { Navigation } from "@/components/system/Navigation";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <GlobalSystemStatus client:load />
    <Navigation currentPath={currentPath} client:load />
    <slot />
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
